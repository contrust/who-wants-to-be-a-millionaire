<div>
    <p class="title" id="leaderboardTitle">Таблица лидеров</p>
</div>
<table class="leaderboard">
    <thead>
        <tr>
            <th class="text" id="LbName">Имя</th>
            <th class="text" id="LbScore">Счет</th>
        </tr>
    </thead>
    {{#each items}}
    <tr>
        <td class="text" id="nameColumn">{{name}}</td>
        <td class="text" id="scoreColumn">{{score}}</td>
    </tr>
    {{/each}}
</table>
<button class="pageButton" onclick="location.href = '/start'">Перейти в стартовое меню</button>